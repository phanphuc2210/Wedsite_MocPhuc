{{> header parameter=customer}}

<div class="container">
    <div class="container my-4">
        <h3>Cập nhật thông tin cá nhân</h3>
        <form method="POST" action="/me/edit?_method=PUT">
            <div class='mb-3'>
                <label for='idkh' class='form-label'>ID</label>
                <input
                    type='text'
                    class='form-control'
                    id='idkh'
                    name='idkh'
                    value="{{customer.IDKH}}"
                    readonly
                />
            </div>
            <div class='mb-3'>
                <label for='ho' class='form-label'>Họ</label>
                <input
                    type='text'
                    class='form-control'
                    id='ho'
                    name='ho'
                    value="{{customer.HO}}"
                />
            </div>
            <div class='mb-3'>
                <label for='tendem' class='form-label'>Tên đệm</label>
                <input
                    type='text'
                    class='form-control'
                    id='tendem'
                    name='tendem'
                    value="{{customer.TENDEM}}"
                    
                />
            </div>
            <div class='mb-3'>
                <label for='ten' class='form-label'>Tên</label>
                <input
                    type='text'
                    class='form-control'
                    id='ten'
                    name='ten'
                    value="{{customer.TEN}}"
                    
                />
            </div>
            <div class='mb-3'>
                <label for='ngaysinh' class='form-label'>Ngày sinh</label>
                <input
                    class='form-control'
                    id='ngaysinh'
                    name='ngaysinh'
                    value="{{customer.NGAYSINH}}"
                    
                />
            </div>
            <div class='mb-3'>
                <label for='diachi' class='form-label'>Địa chỉ</label>
                <input
                    type='text'
                    class='form-control'
                    id='diachi'
                    name='diachi'
                    value="{{customer.DIACHI}}"
                    
                />
            </div>
            <div class='mb-3'>
                <label for='sdt' class='form-label'>Sđt</label>
                <input
                    type='text'
                    class='form-control'
                    id='sdt'
                    name='sdt'
                    value="{{customer.SDT}}"
                    
                />
            </div>
            <div class='mb-3'>
                <label for='email' class='form-label'>Email</label>
                <input
                    type='text'
                    class='form-control'
                    id='email'
                    name='email'
                    value="{{customer.EMAIL}}"
                    
                />
            </div>
            <button type="submit" class="btn btn-dark">Cập nhật</button>
        </form>
    </div>
</div>